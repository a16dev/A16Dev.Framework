<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net7.0;net6.0;net5.0;netstandard2.1;netcoreapp3.1</TargetFrameworks>
		<GeneratePackageOnBuild>False</GeneratePackageOnBuild>
		<Description>Abstractions for an event store</Description>
		<Company>$(Authors)</Company>
		<Authors>Charalambos Hadjiantoniou</Authors>
		<Title>CH - EventStore.Abstractions</Title>
		<PackageIcon>logo-duck.png</PackageIcon>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<Copyright>$(Authors)</Copyright>
		<RepositoryUrl>https://github.com/A16Dev/A16Dev.Framework</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
	</PropertyGroup>

	<ItemGroup>
		<None Include="logo-duck.png" Pack="true" PackagePath="\" />
	</ItemGroup>

  <ItemGroup>
    <PackageReference Include="A16Dev.Domain.Abstractions" Version="1.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
  </ItemGroup>

</Project>